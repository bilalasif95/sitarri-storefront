{
  "name": "sitarri-storefront",
  "description": "A GraphQL-powered, PWA, single-page storefront application for Sitarri",
  "repository": "https://github.com/mirumee/saleor-storefront",
  "website": "https://dev.sitarri.co.uk/",
  "logo": "https://mirumee.com/img/opensource_saleor.jpg",
  "keywords": ["sitarri", "e-commerce", "storefront"],
  "env": {
    "API_URI": {
      "description": "URI of a running instance of Sitarri GraphQL API",
      "value": "https://dev-backend.sitarri.co.uk/graphql/"
    }
  },
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-static.git"
    }
  ]
}
